<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".memo_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#CBA238"
            android:orientation="horizontal"
            android:weightSum="100">

                <ImageView
                    android:id="@+id/back_arrow_memo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:layout_weight="2"/>
                <ImageView
                    android:id="@+id/save_memo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_check_black_24dp"
                    android:layout_weight="2"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/memo_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="98"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:background="#CBA238"/>
                <EditText
                    android:id="@+id/edit_title_memo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="98"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:visibility="gone"
                    />
        </LinearLayout>


        <com.example.memos.LineEditText
            android:id="@+id/memo_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFD166"
            android:gravity="top"/>

</LinearLayout>